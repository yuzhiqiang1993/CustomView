<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.activity.ProgressActivity">


    <com.yzq.customview.widget.QQStepView
        android:id="@+id/qqStepView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:defaultColor="@color/colorPrimary"
        app:mTextColor="@color/colorAccent"
        app:mTextSize="20sp"
        app:progressColor="@color/colorAccent"
        app:roundWidth="6dp" />


    <com.yzq.customview.widget.CircleProgress
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:innerColor="@color/colorAccent"
        app:mTextColor="@color/colorAccent"
        app:mTextSize="18sp"
        app:outerColor="@color/colorPrimary"
        app:roundWidth="6dp" />


</android.support.v7.widget.LinearLayoutCompat>