<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <com.yzq.customview.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"

        app:mText="yuzhiqiang"
        app:mTextSize="24sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="yuzhiqiang"
        android:textSize="24sp" />


    <com.yzq.customview.widget.QQStepView
        android:id="@+id/qqStepView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:defaultColor="@color/colorPrimary"
        app:progressColor="@color/colorAccent"
        app:mTextColor="@color/colorAccent"
        app:mTextSize="20sp"
        app:roundWidth="6dp" />

</LinearLayout>