<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <com.yzq.customview.widget.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"

        app:mText="yuzhiqiang"
        app:mTextSize="24sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="yuzhiqiang"
        android:textSize="24sp" />


    <com.yzq.customview.widget.QQStepView
        android:id="@+id/qqStepView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:defaultColor="@color/colorPrimary"
        app:mTextColor="@color/colorAccent"
        app:mTextSize="20sp"
        app:progressColor="@color/colorAccent"
        app:roundWidth="6dp" />


    <com.yzq.customview.widget.ColorText
        android:id="@+id/colorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="yuzhiqiang"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:changeColor="@color/colorAccent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/l2r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从左到右" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/r2l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从右到左" />


</LinearLayout>